<div class="container">
  <% if (posts && posts.length > 0) { %>
    <div class="posts-list">
      <% posts.forEach(post => { %>
        <div class="post-card">
          <h2><%= post.title %></h2>
          <p><%= post.description %></p>
          <small>
            Created by: <%= post.author ? post.author.username : "Unknown" %> | 
            <%= new Date(post.createdAt).toLocaleString() %>
          </small>

          <% if (session.userId && post.author && session.userId == post.author._id.toString()) { %>
            <div class="post-actions">
              <a href="/posts/edit/<%= post._id %>" class="edit-btn">Edit</a>
              <form action="/posts/delete/<%= post._id %>" method="POST" style="display:inline">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="no-posts-message">
  <% if (session.userId) { %>
    No posts yet. Click "Create Post" to add one!
  <% } else { %>
    No posts yet.
  <% } %>
</p>

  <% } %>
</div>
